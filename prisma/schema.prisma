// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Company {
  id           String   @id @default(uuid())
  name         String
  invoice_date String
  phone        String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  comment      String?
  cards        Card[]
}

model Offer {
  id              String   @id @default(uuid())
  name            String
  percentage      Int
  period_in_month Int
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  comment         String?
  cards           Card[]
}

model Card {
  id               String   @id @default(uuid())
  card_number      String
  start_date       String
  price_before_vat Int      @default(0)
  price_after_vat  Int      @default(0)
  sell_date        String?
  company_id       String
  card_type        String
  offer_id         String?
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
  comment          String?

  company   Company        @relation(fields: [company_id], references: [id])
  offer     Offer?         @relation(fields: [offer_id], references: [id])
  customers CustomerCard[]

  @@index([card_number])
  @@index([company_id])
  @@index([offer_id])
}

model Customer {
  id          String   @id @default(uuid())
  name        String
  national_id String   @unique
  address     String
  grand_name  String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  comment     String?

  cards    CustomerCard[]
  invoices Invoice[]

  @@index([name, national_id])
}

model CustomerCard {
  id          String   @id @default(uuid())
  customer_id String?
  card_id     String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  customer Customer? @relation(fields: [customer_id], references: [id])
  card     Card?     @relation(fields: [card_id], references: [id])

  @@index([customer_id])
  @@index([card_id])
}

model Invoice {
  id          String   @id @default(uuid())
  customer_id String?
  amount      Float
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  comment     String?

  customer Customer? @relation(fields: [customer_id], references: [id])

  @@index([customer_id])
}
