generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Company {
  id           String   @id @default(uuid())
  name         String   @unique
  name_clean   String
  invoice_date String
  phone        String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  comment      String?
  cards        Card[]
}

model Offer {
  id         String   @id @default(uuid())
  name       String   @unique
  percentage Int
  end_date   DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  comment    String?
  cards      Card[]
}

model Card {
  id               String   @id @default(uuid())
  card_number      String   @unique
  start_date       String
  price_before_vat Int      @default(0)
  price_after_vat  Int      @default(0)
  company_id       String
  customer_id      String?
  card_type        String
  offer_id         String?
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
  comment          String?

  company  Company   @relation(fields: [company_id], references: [id], onDelete: Cascade)
  offer    Offer?    @relation(fields: [offer_id], references: [id])
  customer Customer? @relation(fields: [customer_id], references: [id])

  @@index([card_number])
  @@index([company_id])
  @@index([offer_id])
  @@index([customer_id])
}

model Customer {
  id          String   @id @default(uuid())
  name        String
  name_clean  String
  national_id String?  @unique
  address     String?
  grand_name  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  comment     String?

  cards    Card[]
  invoices Invoice[]

  @@index([name, national_id])
}

model Invoice {
  id           String    @id @default(uuid())
  customer_id  String?
  amount       Float
  invoice_date DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  comment      String?

  customer Customer? @relation(fields: [customer_id], references: [id], onDelete: Cascade)

  @@index([customer_id])
}
